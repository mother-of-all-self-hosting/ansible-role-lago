#jinja2: lstrip_blocks: "True"
[Unit]
Description=Lago Front ({{ lago_identifier }}-front)
{% for service in lago_front_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} kill {{ lago_identifier }}-front 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ lago_identifier }}-front 2>/dev/null || true'

{#
	Not using `--read-only` or a `--user` because of:
	> touch: ./env-config.js: Read-only file system
	> ./.env.sh: line 12: ./env-config.js: Read-only file system
#}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
			--rm \
			--name={{ lago_identifier }}-front \
			--log-driver=none \
			--network={{ lago_front_container_network }} \
			{% if lago_front_container_http_bind_port %}
			-p {{ lago_front_container_http_bind_port }}:80 \
			{% endif %}
			--env-file={{ lago_front_base_path }}/env \
			--label-file={{ lago_front_base_path }}/labels \
			{% for volume in lago_front_container_additional_volumes %}
			--mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options | default('') else '' }} \
			{% endfor %}
			{% for arg in lago_front_container_extra_arguments %}
			{{ arg }} \
			{% endfor %}
			{{ lago_front_container_image }}

{% for network in lago_front_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ lago_identifier }}-front
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ lago_identifier }}-front

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} kill {{ lago_identifier }}-front 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ lago_identifier }}-front 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ lago_identifier }}-front

[Install]
WantedBy=multi-user.target
